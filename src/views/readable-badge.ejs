<!DOCTYPE html>
<html lang="pt-br">
  <% if (hasData) { %><%- include("parts/head", { pageName: gitHubData.name,
  hasEvent: true, eventName: profileData.event }) %><% } else { %><%-
  include("parts/head", { pageName: "Home", hasEvent: false }) %><% } %>

  <body class="page has-img-background has-badge">
    <main class="badge">
      <header class="badge-header">
        <div class="badge-band"></div>
        <a href="/login" class="btn-login-redirect">Entrar</a>
      </header>
      <section class="badge-body">
        <header
          class="readable-badge-avatar <% if (hasData) { %>has-data<% } %>"
        >
          <img
            src="<% if (hasData) { %><%= gitHubData.avatar_url %><% } else { %>https://via.placeholder.com/160x184/e1e1e6/202024<% } %>"
            alt="<% if (hasData) { %><%= gitHubData.name %><% } else { %>Sua foto de perfil<% } %>"
            class="img-avatar"
          />
        </header>
        <section>
          <div class="identification">
            <h1 class="user-name">
              <% if (hasData) { %><%= gitHubData.name %><% } else { %>Seu nome<%
              } %>
            </h1>
            <a
              href="<% if (hasData) { %><%= gitHubData.html_url %><% } else { %>#<% } %>"
              target="_blank"
              rel="noreferrer noopener"
              class="profile-link"
            >
              <img src="/images/github.svg" alt="GitHub" class="img-github" />
              <% if (hasData) { %><%= gitHubData.login %><% } else { %>usuário<%
              } %>
            </a>
          </div>
          <p class="user-biography">
            <% if (hasData) { %><%= gitHubData.bio %><% } else { %>Descrição do
            GitHub<% } %>
          </p>
        </section>
        <footer class="badge-footer">
          <ul class="social-links-wrapper">
            <li class="social-link-container">
              <a
                href="<% if (hasData && profileData.links.youtube) { %>https://youtube.com/<%= profileData.links.youtube %><% } else { %>#<% } %>"
                target="_blank"
                rel="noreferrer noopener"
                class="social-link"
              >
                <img
                  src="/images/youtube.svg"
                  alt="YouTube"
                  class="img-social"
                />
              </a>
            </li>
            <li class="social-link-container">
              <a
                href="<% if (hasData && profileData.links.instagram) { %>https://instagram.com/<%= profileData.links.instagram %>/<% } else { %>#<% } %>"
                target="_blank"
                rel="noreferrer noopener"
                class="social-link"
              >
                <img
                  src="/images/instagram.svg"
                  alt="Instagram"
                  class="img-social"
                />
              </a>
            </li>
            <li class="social-link-container">
              <a
                href="<% if (hasData && profileData.links.facebook) { %>https://facebook.com/<%= profileData.links.facebook %><% } else { %>#<% } %>"
                target="_blank"
                rel="noreferrer noopener"
                class="social-link"
              >
                <img
                  src="/images/facebook.svg"
                  alt="Facebook"
                  class="img-social"
                />
              </a>
            </li>
            <li class="social-link-container">
              <a
                href="<% if (hasData && profileData.links.twitter) { %>https://twitter.com/<%= profileData.links.twitter %><% } else { %>#<% } %>"
                target="_blank"
                rel="noreferrer noopener"
                class="social-link"
              >
                <img
                  src="/images/twitter.svg"
                  alt="Twitter"
                  class="img-social"
                />
              </a>
            </li>
          </ul>
        </footer>
      </section>
    </main>
  </body>
</html>
